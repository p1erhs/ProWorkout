<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00154f"
    tools:context=".ChoosePlan">

    <TextView
        android:id="@+id/txt_plan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:fontFamily="@font/archivo_black"
        android:text="@string/choose_your_goals"
        android:textAlignment="center"
        android:textColor="#f4af1b"
        android:textSize="34sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWeight"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#f4af1b"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <TableRow>
                <TextView
                    android:id="@+id/txtcurrweight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@id/currentWeight"
                    android:text="@string/current_weight"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="#00154f"
                    android:textSize="24sp" />
            </TableRow>
            <TableRow>
                <EditText
                    android:id="@+id/currentWeight"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginHorizontal="50dp"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:layout_margin="25dp"
                    android:textColor="#f4af1b"
                    app:backgroundTint="@null"
                    android:background="@drawable/update_button" >
                </Button>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/txttargetweight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:labelFor="@id/targetWeight"
                    android:text="@string/target_weight"
                    android:textAlignment="center"
                    android:textColor="#00154f"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow>
                <EditText
                    android:id="@+id/targetWeight"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginHorizontal="50dp"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update"
                    android:layout_margin="25dp"
                    android:textColor="#f4af1b"
                    app:backgroundTint="@null"
                    android:background="@drawable/update_button"></Button>
            </TableRow>
        </TableLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCalories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#f4af1b"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:shrinkColumns="1">

            <TableRow>
                <TextView
                    android:id="@+id/txtIntake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:text="@string/calorie_intake"
                    android:textAlignment="center"
                    android:textColor="#00154f"
                    android:textSize="24sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="150dp"
                    android:labelFor="@id/age"
                    android:text="@string/age"
                    android:textColor="#00154f" />

                <EditText
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginEnd="40dp"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="150dp"
                    android:labelFor="@id/height"
                    android:textColor="#00154f"
                    android:text="@string/height_cm" />

                <EditText
                    android:id="@+id/height"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginEnd="40dp"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />
            </TableRow>
            <TableRow>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_column="0">

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/radio_female"
                        android:layout_marginStart="5dp" />

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/radio_male"
                        android:checked="true"
                        android:layout_marginStart="5dp" />
                </RadioGroup>

            </TableRow>

            <TableRow>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_column="0">

                    <RadioButton
                        android:id="@+id/radioPlan1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_1"
                        android:checked="true"
                        android:layout_marginStart="5dp"/>

                    <RadioButton
                        android:id="@+id/radioPlan2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_2"
                        android:checked="true"
                        android:layout_marginStart="5dp" />
                    <RadioButton
                        android:id="@+id/radioPlan3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plan_3"
                        android:layout_marginStart="5dp" />
                </RadioGroup>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/Calories"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />

            </TableRow>
        </TableLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
